<Window x:Class="TDOLeicaController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TDOLeicaController" Height="220" Width="525" ResizeMode="CanMinimize" Icon="SolDataIcon.ico"
        Closing="mainWindow_Closing">
    <Window.Background>
        <ImageBrush ImageSource="SDDB_background.jpg" Opacity="1" Stretch="UniformToFill" />
    </Window.Background>
    <Grid HorizontalAlignment="Center">


        <TextBox Name="TxtStatus" HorizontalAlignment="Left" Height="108" Margin="0,10,0,0" TextWrapping="Wrap" Text="Progress messages..." VerticalAlignment="Top" Width="493"/>

        <Button Name="BtnSettings" Content="Reload Settings" HorizontalAlignment="Left" Margin="0,123,0,0" VerticalAlignment="Top" Width="115" Click="btnSettings_Click" />
        <Button Name="BtnJob" Content="Load Job" HorizontalAlignment="Left" Margin="120,123,0,0" VerticalAlignment="Top" Width="115" Click="btnJob_Click"/>
        <Button Name="BtnJobReload" Content="Reload Job" HorizontalAlignment="Left" Margin="120,153,0,0" VerticalAlignment="Top" Width="115" Click="btnJobReload_Click"/>
        <Button Name="BtnStartStop" Content="START" HorizontalAlignment="Left" Height="52" Margin="351,123,0,0" VerticalAlignment="Top" Width="142" 
                FontWeight="Bold" FontSize="18" Click="btnStartStop_Click"/>

    </Grid>
</Window>
